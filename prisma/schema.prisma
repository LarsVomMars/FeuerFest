datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int       @id @default(autoincrement())
    email     String    @unique
    name      String
    username  String?   @unique
    password  String?
    role      Role      @default(USER)
    status    Status    @default(PENDING)
    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt
}

enum Role {
    USER
    ADMIN
    OWNER
}

enum Status {
    PENDING
    ACTIVE
    INACTIVE
}
